# Copy to .env and fill values

# Runtime / transport
TRADING_GATE_SOCKET=/tmp/trading-gate.sock
TRADING_GATE_SAFETY_CONFIG=config/safety.yaml
TRADING_GATE_RULES_DIR=config/rules/active
TRADING_GATE_AUDIT_LOG=data/audit.log
TRADING_GATE_DB=data/trades.db
TRADING_GATE_PRODUCT=BTC-USD
TRADING_GATE_EXCHANGE=coinbase_advanced
TRADING_GATE_DRY_RUN=true

# Exchange credentials (coinbase advanced)
COINBASE_API_KEY=your_coinbase_api_key
# For Coinbase Advanced, this is the private key PEM text
COINBASE_API_SECRET="your_coinbase_api_secret_pem"
COINBASE_API_BASE_URL=https://api.exchange.coinbase.com

# Optional fallback if exchange account query is not available
TRADING_GATE_INITIAL_ACCOUNT_VALUE=14600.00
TRADING_GATE_INITIAL_AVAILABLE_CASH=14600.00

# Optional (legacy API only)
COINBASE_API_PASSPHRASE=your_coinbase_api_passphrase
API_KEY=your_coinbase_api_key
API_SECRET=your_coinbase_api_secret
API_PASSPHRASE=your_coinbase_api_passphrase
TRADING_GATE_API_KEY=your_coinbase_api_key
TRADING_GATE_API_SECRET=your_coinbase_api_secret
TRADING_GATE_API_PASSPHRASE=your_coinbase_api_passphrase
TRADING_GATE_COINBASE_API_BASE_URL=https://api.exchange.coinbase.com
COINBASE_DRY_RUN=true

# Agent
TRADING_STRATEGY_CONFIG=config/strategies/mean-reversion-funding.yaml
TRADING_AGENT_PRODUCT=BTC-USD
TRADING_AGENT_CYCLE_SECONDS=2
